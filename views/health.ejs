  <script>
    function calculateBMI() {
      // Get the height and weight values from the form
      const height = parseFloat(document.getElementById('bmiHeight').value);
      const weight = parseFloat(document.getElementById('bmiWeight').value);

      // Validate the inputs
      if (isNaN(height) || isNaN(weight) || height <= 0 || weight <= 0) {
        document.getElementById('bmiResult').textContent = "Please enter valid numbers for height and weight.";
        return; // Stop further processing if input is invalid
      }

      // Convert height to meters
      const heightInMeters = height / 100;

      // Calculate BMI using the formula: weight / (height^2)
      const bmi = weight / (heightInMeters * heightInMeters);

      // Determine BMI classification
      let classification;
      if (bmi < 18.5) {
        classification = "Underweight";
      } else if (bmi >= 18.5 && bmi <= 24.9) {
        classification = "Normal weight";
      } else if (bmi >= 25 && bmi <= 29.9) {
        classification = "Overweight";
      } else {
        classification = "Obese";
      }

      // Display the result
      document.getElementById('bmiResult').textContent = `Your BMI is ${bmi.toFixed(2)}. Classification: ${classification}.`;
    }


    function calculateBMR() {
      // Get the values from the form
      const gender = document.getElementById('bmrGender').value;
      const age = parseInt(document.getElementById('bmrAge').value);
      const height = parseInt(document.getElementById('bmrHeight').value);
      const weight = parseInt(document.getElementById('bmrWeight').value);

      // Validate the inputs
      if (isNaN(age) || isNaN(height) || isNaN(weight) || age <= 0 || height <= 0 || weight <= 0) {
        document.getElementById('bmrResult').textContent = "Please enter valid numbers for age, height, and weight.";
        return;
      }

      // Calculate BMR based on gender
      let bmr;
      if (gender === "male") {
        bmr = 10 * weight + 6.25 * height - 5 * age + 5; // Mifflin-St Jeor formula for men
      } else {
        bmr = 10 * weight + 6.25 * height - 5 * age - 161; // Mifflin-St Jeor formula for women
      }

      // Display the result
      document.getElementById('bmrResult').textContent = `Your BMR is ${bmr.toFixed(2)} calories/day.`;
    }

    // Attach event listener to the button to handle click
    document.getElementById('calculateButton').addEventListener('click', calculateBMR);


    function calculateCalories() {
      // Get the selected activity level
      const activityLevel = document.getElementById("calActivity").value;

      // Map activity level to corresponding activity multiplier
      let activityFactor;
      switch (activityLevel) {
        case "sedentary":
          activityFactor = 1.2;
          break;
        case "light":
          activityFactor = 1.375;
          break;
        case "moderate":
          activityFactor = 1.55;
          break;
        case "active":
          activityFactor = 1.725;
          break;
        case "veryActive":
          activityFactor = 1.9;
          break;
        default:
