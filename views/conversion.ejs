                <input type="number" class="form-control" id="lengthValue" placeholder="Enter length">
              </div>
              <div class="mb-3">
                <label for="lengthUnit" class="form-label">From Unit</label>
                <select class="form-select" id="lengthUnit">
                  <option value="meters">Meters</option>
                  <option value="kilometers">Kilometers</option>
                  <option value="feet">Feet</option>
                  <option value="centimeter">Centimeter</option>
                  <option value="millimeter">Millimeter</option>
                  <option value="inches">Inch</option>
                  <option value="yards">Yard</option>
                  <option value="miles">Mile</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="targetLengthUnit" class="form-label">To Unit</label>
                <select class="form-select" id="targetLengthUnit">
                  <option value="meters">Meters</option>
                  <option value="kilometers">Kilometers</option>
                  <option value="feet">Feet</option>
                  <option value="centimeter">Centimeter</option>
                  <option value="millimeter">Millimeter</option>
                  <option value="inches">Inch</option>
                  <option value="yards">Yard</option>
                  <option value="miles">Mile</option>
                </select>
                </select>
              </div>

              <!-- <button type="button" class="btn btn-primary" onclick="convertLength()">Convert</button> -->

              <div
                class="row mt-2 d-flex align-items-center justify-content-center mt-4 justify-content-center mt-4 mt-4">
